{
  "name": "hris-restful-api",
  "version": "1.0.0",
  "description": "HRIS System Restful API",
  "license": "AGPL-3.0-or-later",
  "scripts": {
    "build": "rm -r dist && tsc -p tsconfig.build.json",
    "build:travis": "tsc -p tsconfig.build.json",
    "build:circleci": "tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "nodemon",
    "start:debug": "nodemon --config nodemon-debug.json",
    "migration:run": "ts-node node_modules/.bin/typeorm migration:run",
    "migration:revert": "ts-node node_modules/.bin/typeorm migration:revert",
    "typeorm:cli": "ts-node ./node_modules/typeorm/cli -f ormconfig.json",
    "prestart:prod": "rimraf dist && npm run build",
    "start:prod": "node dist/main.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@iapps/utils": "^1.0.1-alpha.5",
    "@nestjs/common": "^6.8.4",
    "@nestjs/core": "^6.8.4",
    "@nestjs/microservices": "^6.8.4",
    "@nestjs/passport": "^6.1.0",
    "@nestjs/platform-express": "^6.8.4",
    "@nestjs/swagger": "^3.0.2",
    "@nestjs/typeorm": "^6.2.0",
    "@nestjs/websockets": "^6.8.4",
    "apollo-server-express": "^2.9.7",
    "axios": "^0.19.0",
    "compression": "^1.7.4",
    "csurf": "^1.10.0",
    "express-rate-limit": "^5.0.0",
    "express-session": "^1.17.0",
    "extract-zip": "^1.6.7",
    "handlebars": "^4.4.5",
    "helmet": "^3.21.2",
    "lodash": "^4.17.15",
    "node-stream-zip": "^1.8.2",
    "passport": "^0.4.0",
    "passport-http": "^0.3.0",
    "passport-http-bearer": "^1.0.1",
    "pg": "^7.12.1",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.0",
    "rxjs": "6.5.3",
    "swagger-ui-express": "^4.1.2",
    "typeorm": "^0.2.20",
    "unzipper": "^0.10.5",
    "uuid": "^3.3.3",
    "zlib": "^1.0.5"
  },
  "devDependencies": {
    "@nestjs/testing": "6.8.4",
    "@types/express": "4.17.1",
    "@types/jest": "24.0.19",
    "@types/node": "12.11.7",
    "@types/supertest": "2.0.8",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "^3.0.2",
    "graphql-tools": "^4.0.6",
    "husky": "^3.0.9",
    "jest": "24.9.0",
    "nodemon": "1.19.4",
    "prettier": "1.18.2",
    "supertest": "4.0.2",
    "ts-jest": "24.1.0",
    "ts-node": "8.4.1",
    "tsconfig-paths": "3.9.0",
    "tslint": "5.20.0",
    "typescript": "3.6.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "test",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
