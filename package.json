{
  "name": "hris-restful-api",
  "version": "1.0.0",
  "description": "HRIS System Restful API",
  "license": "AGPL-3.0-or-later",
  "scripts": {
    "build": "rm -rf dist && tsc -p tsconfig.build.json",
    "build:travis": "tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "node --max_old_space_size=5500 ./node_modules/.bin/nodemon",
    "start:debug": "node --max_old_space_size=2500 ./node_modules/.bin/nodemon --config nodemon-debug.json",
    "migration:run": "ts-node node_modules/.bin/typeorm migration:run -c development",
    "migration:revert": "ts-node node_modules/.bin/typeorm migration:revert",
    "typeorm:cli": "ts-node ./node_modules/typeorm/cli -f ormconfig.json",
    "prestart:prod": "rimraf dist && npx run build",
    "start:prod": "node dist/main.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js"
  },
  "dependencies": {
    "@iapps/utils": "^1.0.1-alpha.5",
    "@nestjs/common": "^7.0.7",
    "@nestjs/core": "^7.0.6",
    "@nestjs/microservices": "7.0.7",
    "@nestjs/passport": "7.0.0",
    "@nestjs/platform-express": "^7.0.7",
    "@nestjs/schedule": "^0.3.0",
    "@nestjs/swagger": "^4.5.1",
    "@nestjs/typeorm": "6.2.0",
    "@nestjs/websockets": "7.0.7",
    "@tsed/common": "^5.44.17",
    "@tsed/core": "^5.44.17",
    "@tsed/di": "^5.44.17",
    "@tsed/typeorm": "^5.44.15",
    "@types/pg": "^7.14.2",
    "apollo-server-express": "^2.12.0",
    "axios": "^0.19.2",
    "body-parser": "^1.19.0",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.11.1",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.5",
    "cron": "^1.8.2",
    "csurf": "^1.11.0",
    "date-fns": "^2.12.0",
    "express": "^4.17.1",
    "express-rate-limit": "^5.0.0",
    "express-session": "^1.17.0",
    "extract-zip": "^2.0.0",
    "handlebars": "^4.7.6",
    "helmet": "^3.22.0",
    "lodash": "^4.17.15",
    "method-override": "^3.0.0",
    "nestjs-typeorm-paginate": "^2.0.1",
    "node-pre-gyp": "^0.14.0",
    "node-stream-zip": "^1.9.1",
    "passport": "^0.4.1",
    "passport-http": "^0.3.0",
    "passport-http-bearer": "^1.0.1",
    "pg": "^8.0.2",
    "reflect-metadata": "^0.1.13",
    "rimraf": "3.0.2",
    "rxjs": "6.5.5",
    "sqlite3": "^4.1.1",
    "swagger-ui-express": "^4.1.3",
    "typeorm": "^0.2.24",
    "uid": "^1.0.0",
    "unzipper": "^0.10.10",
    "uuid": "^7.0.3",
    "yallist": "^4.0.0",
    "zlib": "^1.0.5"
  },
  "devDependencies": {
    "@nestjs/testing": "7.0.7",
    "@types/cron": "^1.7.2",
    "@types/express": "4.17.6",
    "@types/jest": "25.2.1",
    "@types/node": "13.11.1",
    "@types/supertest": "2.0.8",
    "commitizen": "^4.0.4",
    "cz-conventional-changelog": "^3.0.2",
    "graphql-tools": "^4.0.6",
    "husky": "^4.2.5",
    "jest": "25.3.0",
    "nodemon": "2.0.3",
    "prettier": "2.0.4",
    "supertest": "4.0.2",
    "ts-jest": "25.3.1",
    "ts-node": "8.8.2",
    "tsconfig-paths": "3.9.0",
    "tslint": "6.1.1",
    "typescript": "3.7.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "test",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
  "migration:generate": "npx run typeorm migration:generate -n",
  "migration:create": "npx run typeorm migration:create -n",
  "migration:run": "npx run typeorm migration:run"
}
